<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shobhit.permissions.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iemi_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IEMI number" />

            <TextView
                android:id="@+id/cid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cell id and Location code!" />


            <Button
                android:id="@+id/iemi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="176dp"
                android:text="IEMI" />


            <TextView
                android:id="@+id/network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Network Type" />

            <TextView
                android:id="@+id/mobile_operator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cell id and Location code!" />


            <Button
                android:id="@+id/minfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Info" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="camera"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="next"/>
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
